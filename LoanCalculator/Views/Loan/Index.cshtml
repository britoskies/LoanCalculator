@model Application.ViewModel.LoanViewModel;
@{
}

<form method="get" asp-controller="Loan" asp-action="Result" class="container p-4 mt-5">
	<section class="row">
        <div class="form-group d-flex flex-column gap-3 mx-auto text-center col-md-4">
			<section class="bg-custom-lightblue rounded-3 text-white p-3">
				<h3 class="display-8 fw-normal text-uppercase"> Calcula tu <br /> <b>Cuota Mensual</b> </h3>
			</section>
			<section class="input-group">
				<span class="input-group-text bg-custom-darkred text-white"></span>
				<input asp-for="Amount" type="text" class="form-control" placeholder="Monto del préstamo"/>
			</section>
			<section class="input-group">
				<span class="input-group-text bg-custom-darkred text-white"></span>
				<select asp-for="RateType" id="rate-type" class="form-select">
				  <option value="personal" selected>Personal</option>
				  <option value="automovil">Automóvil</option>
				  <option value="hipotecario">Hipotecario</option>
				</select>
			</section>
			<div class="d-flex gap-2"> 
				<section class="input-group">
					<span class="input-group-text bg-custom-darkred text-white"></span>
					<select 
						asp-for="MonthlyRate" 
						class="form-select" 
						onfocus="this.size=5;" 
						onblur="this.size=1;" 
						onchange="this.size=1; this.blur();"
					>
						<optgroup label="Meses">
							@{
								for(int i = 12; i <= 120; i+=6)
								{
								  <option value="@i">@i meses</option>
								}
							}
						</optgroup>
					</select>
				</section>
				<section class="input-group">
					<span class="input-group-text bg-custom-darkred text-white">Tasa de interés</span>
					<input asp-for="Rate" type="text" id="rate-input" class="form-control" disabled/>
				</section>
			</div>
			<button type="submit" class="btn bg-custom-darkred btn-block text-white w-100"> Calcular </button>
		</div>
	 </section>
</form>